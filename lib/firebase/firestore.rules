rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザープロフィールのルール
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // チャットルームのルール
    match /chatRooms/{chatId} {
      // 一覧取得のために読み取り権限を緩和
      allow read: if request.auth != null;
      
      // 新規作成は認証済みユーザーなら可能
      allow create: if request.auth != null;
      
      // 更新・削除は参加者のみ可能
      allow update, delete: if request.auth != null && 
        request.auth.uid in resource.data.participants;
    }

    // メッセージのルール
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }

    // 既存のチャットコレクション（非推奨・移行期間中のみ）
    match /chats/{chatId} {
      // 読み取りのみ許可（移行期間中）
      allow read: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      // 書き込みは無効化（新規作成を防止）
      allow write: if false;
    }

    // 友達リクエストのルール
    match /friendRequests/{requestId} {
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.fromUser || 
         request.auth.uid == resource.data.toUser);
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.fromUser;
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.toUser;
    }

    // 友達関係のルール
    match /friendships/{friendshipId} {
      // 読み取りは関係者（user1またはuser2）のみ
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.user1 || 
         request.auth.uid == resource.data.user2);
      
      // 新規作成は友達リクエストの受信者が可能
      allow create: if request.auth != null && 
        (request.auth.uid == request.resource.data.user1 || 
         request.auth.uid == request.resource.data.user2);
      
      // 更新・削除は関係者のみ
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.user1 || 
         request.auth.uid == resource.data.user2);
    }

    // 通知設定のルール
    match /notificationSettings/{userId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }

    // アプリ設定のルール
    match /appSettings/{userId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
  }
}